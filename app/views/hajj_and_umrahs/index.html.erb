<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Heading -->
  <h1 class="h3 mb-2 text-gray-800"><%= @party.name.capitalize %></h1>

  <!-- DataTales -->
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">All Hajj and Umrahs</h6>
      <%= link_to 'Add new Ticket', new_party_hajj_and_umrah_path(params[:party_id]), class: 'btn btn-primary' %>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Voucher No.</th>
              <th>Visa Rate</th>
              <th>Makkah Hotel Amount</th>
              <th>Madina Hotel Amount</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @hajj_and_umrahs.each do |t| %>
              <tr>
                <td><%= format_date(t.entry_date) %></td>
                <td><%= t.description %></td>
                <td><%= t.voucher_no %></td>
                <td><%= t.visa_rate %></td>
                <td><%= t.makkah_hotel_amount %></td>
                <td><%= t.madina_hotel_amount %></td>
                <td class="text-end">
                  <%= link_to 'Edit', edit_party_hajj_and_umrah_path(t.party_id, t.id), class: 'btn btn-secondary' %>
                  <%= link_to 'Delete', party_hajj_and_umrah_path(t.party_id, t.id), data: { "turbo-method": :delete, confirm: 'Are you sure you want to delete this Hajj and Umrah entry?' }, class: 'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->